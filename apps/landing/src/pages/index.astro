---
import '../styles/global.css'
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
import { LandingPage } from '../components/landing/LandingPage'
import PostHog from '../components/posthog.astro'
import geistLatinWoff2 from '@fontsource-variable/geist/files/geist-latin-wght-normal.woff2?url'
import jetbrainsMonoLatinWoff2 from '@fontsource-variable/jetbrains-mono/files/jetbrains-mono-latin-wght-normal.woff2?url'
import instrumentSerifWoff2 from '@fontsource/instrument-serif/files/instrument-serif-latin-400-normal.woff2?url'
import instrumentSerifItalicWoff2 from '@fontsource/instrument-serif/files/instrument-serif-latin-400-italic.woff2?url'

const title = 'GRIND â€” Your Life Is The Game. Level Up For Real.'
const description = 'A local-first operating system where habits are quests, progress is XP, and your growth has a skill tree.'
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const ogImage = new URL('/og/index.png', Astro.site)
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0d0d12" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL.href} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage.href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="GRIND" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@mor3is_" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage.href} />

    <link rel="preload" href={geistLatinWoff2} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={jetbrainsMonoLatinWoff2} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={instrumentSerifWoff2} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={instrumentSerifItalicWoff2} as="font" type="font/woff2" crossorigin />

    <PostHog />

    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebApplication',
      name: 'GRIND',
      description,
      url: Astro.site?.href,
      applicationCategory: 'ProductivityApplication',
      operatingSystem: 'Web',
      author: { '@type': 'Organization', name: 'GRIND' },
    })} />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Nav />
      <LandingPage client:load />
      <Footer />
    </div>
  </body>
</html>
